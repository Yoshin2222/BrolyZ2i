;[State 10231, Superjump Sound]
;type = PlaySnd
;trigger1 = !animtime
;value = 0,24
;channel = 6

;[State 10231, Superjump Sound]
;type = PlaySnd
;trigger1 = !animtime
;value = 0,24
;channel = 6

;[State 10231, Superjump Sound]
;type = PlaySnd
;trigger1 = !animtime
;value = 0,24
;channel = 6

;Jump link infinite prevention on tall chars -- see state-2-3.cns for RemoveExplod.
[State 50, Explod]
type = Explod
trigger1 = NumExplod(52)<4
trigger1 = P2StateType != A
trigger1 = time <= 0
anim = 1	;blank anim
ID = 52
removetime = -1
removeongethit = 1

[State 40, 1]
type = VarSet
trigger1 = time <= 0
sysvar(1) = cond(command = "holdfwd", 1, cond(command = "holdback", -1,0))

[State 40, Vel Jump]
type = VelSet
;trigger1 = time <= 0
trigger1 = prevstateno = 40 ;Jump Start
x = cond(sysvar(1)=0, const(velocity.jump.neu.x), cond(sysvar(1)=1, const(velocity.jump.fwd.x), const(velocity.jump.back.x)))
y = const(velocity.jump.y)
persistent = 0

[State 40, vel run jump]
type = VelSet
;trigger1 = time <= 0
trigger1 = (prevstateno = [100,101]) ;RUN_FWD
x = const(velocity.runjump.fwd.x)
y = Const(velocity.jump.y)
persistent = 0

[State 10230, vel after launcher]
type = VelSet
;trigger1 = time <= 0
trigger1 = prevstateno = 10230
x = 0.85 * Const(velocity.jump.fwd.x)
y = -8.4
persistent = 0

[State 10233, SJ Vel]
type = VelSet
;trigger1 = time <= 0
trigger1 = (prevstateno = [10231,10233]) ;RUN_FWD
x = cond(sysvar(1)=0, const(velocity.jump.neu.x), cond(sysvar(1)=1, const(velocity.jump.fwd.x), const(velocity.jump.back.x)))
y = const(velocity.jump.y) - cond(prevstateno = 10231,4.5,4.2)
persistent = 0

[State 50, fall speed]
type = VelAdd
trigger1 = 1
y = const(movement.yaccel)

[State 10231, Give Player control]
type = ctrlset
trigger1 = Time <= 0
value = 1

[State 50, 2]
type = ChangeAnim
trigger1 = time <= 0
value = cond((vel x)=0, 41, cond((vel x)>0, 42, 43))

[State 50, 3]
type = ChangeAnim
trigger1 = Vel y > Const720p(-8)
trigger1 = SelfAnimExist(anim + 3)
trigger1 = anim >= 41 && anim <= 43
persistent = 0
value = Anim + 3

[state 0, land]
type = changestate
;triggerall = time > 5 ;Failsafe
trigger1 = vel y > 0 && pos y >= 0
value = 52
ctrl = 1

