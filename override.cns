[State 20, VelSet]
type = VelSet
trigger1 = !enemy, NumExplod(94646464) && !enemy, NumExplod(92468246)
trigger1 = command = "holdback"
trigger2 = enemy, NumExplod(94646464) || enemy, NumExplod(92468246)
trigger2 = command = "holdfwd"
x = const(velocity.walk.back.x) * cond((var(39)&1) !=0,1.1,1)

[State Set Anim]
type = ChangeAnim
trigger1 = ((vel x > 0 && Anim != 20) || (vel x < 0 && Anim != 21)) && Anim != 5
trigger2 = Anim = 5 && AnimTime = 0
value = cond(vel x > 0, 20, 21)

[State 20, 1]
type = VelSet
trigger1 = AILevel
x = const(velocity.walk.fwd.x)

